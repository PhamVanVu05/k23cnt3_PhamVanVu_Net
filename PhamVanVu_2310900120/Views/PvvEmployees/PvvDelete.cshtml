@model PhamVanVu_2310900120.Models.PvvEmployee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="card shadow-sm mx-auto mt-4" style="max-width: 500px;">
    <div class="card-header bg-danger text-white">
        <h4 class="text-center">Bạn có chắc muốn xóa nhân viên này?</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Họ tên</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PvvEmpName)</dd>

            <dt class="col-sm-4">Cấp bậc</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PvvEmpLevel)</dd>

            <dt class="col-sm-4">Ngày bắt đầu</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PvvEmpStartDate)</dd>

            <dt class="col-sm-4">Trạng thái</dt>
            @if (Model.PvvEmpStatus == true)
            {
                <p>Hiển thị</p>
            }
            else
            {
                <p>Tạm ẩn</p>
            }
        </dl>
    </div>

    <div class="card-footer text-center">
        <form asp-action="PvvDelete">
            <input type="hidden" asp-for="PvvEmpId" />
            <button type="submit" class="btn btn-danger me-2">🗑️ Xóa</button>
            <a asp-action="PvvIndex" class="btn btn-secondary">⬅️ Quay lại</a>
        </form>
    </div>
</div>